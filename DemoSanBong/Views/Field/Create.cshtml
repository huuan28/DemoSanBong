@model DemoSanBong.ViewModels.FieldViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<link rel="stylesheet" href="~/css/FieldCreate.css" />

<div class="booking-container">
    <div class="booking-left">
        <div class="image-grid">
            <div class="form-img">
                <label asp-for="DefaultImage">Upload Image</label>
                <input type="file" name="image" class="form-control" id="imageUpload" />
            </div>
            <div class="form-img">
                <img id="Image" src="~/Images/default.jpg" alt="No Image" />
            </div>
        </div>
    </div>
    <div class="booking-right">
        <form action="#" method="post" class="booking-form">
            <form asp-action="Create" asp-controller="Field" enctype="multipart/form-data" id="createForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-container">
                    <h1>Book A <span>Field</span></h1>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input type="text" asp-for="Name" class="form-control" placeholder="Mã sân" />
                        <span asp-validation-for="Name" class="text-danger"></span>

                        <label asp-for="Type" class="control-label"></label>
                        <input type="text" asp-for="Type" class="form-control" placeholder="Loại sân" />
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input type="text" asp-for="Price" class="form-control" placeholder="Giá giờ" />
                        <span asp-validation-for="Price" class="text-danger"></span>

                        <label asp-for="PricePerMonth" class="control-label"></label>
                        <input type="text" asp-for="PricePerMonth" class="form-control" placeholder="Giá tháng" />
                        <span asp-validation-for="PricePerMonth" class="text-danger"></span>
                    </div>
                    <div class="form-group full-width">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control" placeholder="Mô tả sân"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group-other" style="margin-bottom: 15px">
                        @* <input type="checkbox" name="your-status" value="TT"> *@
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                        </label>
                    </div>
                    <div class="form-group">
                        <button type="submit" value="Create" class="btn btn-primary">BOOK NOW </button>
                    </div>
                    <div>
                        <a asp-action="Index">Back to List</a>
                    </div>
                </div>
            </form>
        </form>
    </div>
</div>



@section Scripts {
    <script>
        document.getElementById('imageUpload').addEventListener('change', function (event) {
            var reader = new FileReader();
            reader.onload = function () {
                var output = document.getElementById('Image');
                output.src = reader.result;
            };
            reader.readAsDataURL(event.target.files[0]);
        });
    </script>
}