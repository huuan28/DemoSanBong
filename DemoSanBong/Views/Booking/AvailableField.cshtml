@model IEnumerable<DemoSanBong.ViewModels.FieldViewModel>



<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-lg-6 col-md-4 wow fadeInUp" data-wow-delay="0.1s" style="visibility: visible; animation-delay: 0.1s; animation-name: fadeInUp;">
                    <div class="room-item shadow rounded overflow-hidden">

                        <div class="position-relative">
                            <img class="img-fluid" src="~/Images/3th.jpg" alt="">
                            <small class="position-absolute start-0 top-100 translate-middle-y bg-primary text-white rounded py-1 px-3 ms-4">@string.Format("{0:#,0}đ/h", item.Price)</small>
                        </div>

                        <div class="p-4 mt-2">
                            <div class="d-flex justify-content-between mb-3">
                                <h5 class="mb-0">@Html.DisplayFor(modelItem => item.Name)</h5>
                                <div class="ps-2">                                    
                                        <small class="fa fa-star text-primary"></small>
                                        <small class="fa fa-star text-primary"></small>
                                        <small class="fa fa-star text-primary"></small>
                                        <small class="fa fa-star text-primary"></small>
                                        <small class="fa fa-star text-primary"></small>
                                </div>
                            </div>
                            @*                             <div class="d-flex mb-3">
                        <small class="border-end me-3 pe-3"><i class="fa fa-user text-primary me-2"></i></small>
                        <small class="border-end me-3 pe-3"><i class="fa fa-bath text-primary me-2"></i>2 Bath</small>
                        <small><i class="fa fa-wifi text-primary me-2"></i>Wifi</small>
                        </div> *@
                            <p>Loại sân: @item.Type</p>
                            <p>Giá tháng: @string.Format("{0:#,0} đ",item.PricePerMonth)</p>
                            <div class="d-flex justify-content-between">
                                <a asp-action="Details" asp-controller="Room" target="_blank" asp-route-id="@item.Id">Chi tiết</a>
                                <button class="addRoomButton btn btn-success" data-room-id="@item.Id">Add</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>