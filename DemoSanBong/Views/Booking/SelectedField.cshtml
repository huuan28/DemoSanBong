@model DemoSanBong.ViewModels.SelectedFieldsViewModel
@{
    double amount = 0;
    double deposit = 0;
}
<table class="table">
    <thead>
        <tr>
            <th>
                Tên sân
            </th>
            <th>
                Giá
            </th>
            <th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.SelectedFields)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                @if (Model.RentalType == 0)
                {
                    <td>
                        @string.Format("{0:#,0} đ", item.Price)
                    </td>
                }
                else
                {

                    <td>
                        @string.Format("{0:#,0} đ", item.PricePerMonth)
                    </td>
                }
                <td>
                    <button class="removeRoomButton btn btn-danger" data-room-id="@item.Id">Hủy</button>
                </td>
            </tr>
            @if (Model.RentalType == 0)
            {
                amount += item.Price;
            }
            else
            {
                amount += item.PricePerMonth;
            }
        }
    </tbody>
    <p>Thành tiền: @string.Format("{0:#,0}đ", amount)</p>
    <p>Đặt cọc: @string.Format("{0:#,0}đ", amount * 0.2)</p>
</table>